@model Usuario
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhaleSports</title>
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="~/css/index.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <header>
      <!-- TopBar -->
      <partial name="_TopBar"/>
      <!-- Header-->
      <partial name="_Nav"/>
      <!-- Promociones-->
      
    </header>
    <div class="topbar lng-promocion">
      ¡Envío gratis en pedidos superiores a $100!
    </div>
  <section class="banner">
    <div class="banner-content">
        <h1 class="lng-banner1">Entrena con estilo</h1>
        <p class="lng-banner2">Ropa deportiva diseñada para tu mejor rendimiento</p>
    </div>
  </section>
   <section class="products">
    <h2 class="lng-productoDestacado">Productos Destacados</h2>
    <div class="carousel-container">
      <button class="carousel-btn left" onclick="scrollCarousel(-1)"><i class="fas fa-chevron-left"></i></button>
      <div class="product-list" id="productCarousel">
        <div class="product"><img src="~/css/Images/Productos/Hoodie_RAY_Verde.jpg" alt="Hoodie Rayos Verde"><div class="product-info"><h3>Hoodie Rayos Verde</h3><p class="lng-precioHoddieRAYVerde">$499.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Playera_JAP.jpg" alt="Playera Japon"><div class="product-info"><h3>Playera Japón</h3><p class="lng-precioPlayeraJapon">$349.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Pantalon_Cargo.jpg" alt="Cargos WS"><div class="product-info"><h3>Cargo WS 3</h3><p class="lng-precioCargo">$399.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Playera_klak.jpg" alt="Playera klak"><div class="product-info"><h3>POR EL GYM VIVO-POR LA DE RECEPCION MUERO</h3><p class="lng-precioKlak">$249.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Playera_WS_Crema.jpg" alt="Playera WS Crema"><div class="product-info"><h3>Playera WS Crema</h3><p class="lng-precioPlayeraCrema">$249.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Playera_WS_Blanca.jpg" alt="Playera WS Blanca"><div class="product-info"><h3>Playera WS Blanca</h3><p class="lng-precioPlayeraBlanca">$249.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Hoodie_WS _Negra.jpg" alt="Hoodie WS Negra"><div class="product-info"><h3>Hoodie WS Negra</h3><p class="lng-precioHoodieNegra">$499.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Playera_NATY.jpg" alt="Playera NATY"><div class="product-info"><h3>The Fake NATY</h3><p class="lng-precioPlayeraNATY">$249.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Short_Blanco.jpg" alt="Short Blanco"><div class="product-info"><h3>Short Blanco</h3><p class="lng-precioShortBlanco">$199.99</p></div></div>
        <div class="product"><img src="~/css/Images/Productos/Playera_Definicion.jpg" alt="Playera Definicion"><div class="product-info"><h3>Playera Definicion</h3><p class="lng-precioPlayeraDefinicion">$249.99</p></div></div>
      </div>
      <button class="carousel-btn right" onclick="scrollCarousel(1)"><i class="fas fa-chevron-right"></i></button>
    </div>
  </section>
  <script>
    function scrollCarousel(direction) {
      const carousel = document.getElementById('productCarousel');
      const firstProduct = carousel.querySelector('.product');
      if (!firstProduct) return;
      const productWidth = firstProduct.offsetWidth + 20; // incluye gap
      carousel.scrollLeft += direction * productWidth;
    }
  </script>
  <!-- Footer-->
  <partial name="_Footer"/>
  </body>
</html>