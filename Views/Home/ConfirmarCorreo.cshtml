@{
    ViewBag.Title = "Confirmar Correo";
}

<h2>Confirmación de correo</h2>
<p>Hola, estamos por confirmar tu correo electrónico.</p>
<form asp-action="ConfirmarCorreo" asp-controller="Home" method="post">
    <input type="hidden" name="email" value="@ViewBag.Email" />
    <input type="hidden" name="token" value="@ViewBag.Token" />
    <button type="submit" class="btn btn-primary">Confirmar correo</button>
</form>