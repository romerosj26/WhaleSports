@model Producto

@{
    ViewData["Title"] = Model.Nombre;
}

<div class="producto-detalle container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-6">
            <h2 class="mb-3">@Model.Nombre</h2>
            <h4 class="text-success">$@Model.Precio.ToString("0.00")</h4>
            <p class="text-muted">@Model.Descripcion</p>

            @if (Model.Stock > 0)
            {
                <p class="text-success">En stock: @Model.Stock</p>
                <form asp-action="AgregarAlCarrito" method="post">
                    <input type="hidden" name="productoId" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="cantidad">Cantidad</label>
                        <input type="number" class="form-control w-25" name="cantidad" min="1" max="@Model.Stock" value="1" />
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar al carrito</button>
                </form>
            }
            else
            {
                <p class="text-danger">Producto agotado</p>
            }
        </div>
    </div>
</div>
